@font-face
  font-family:'Champagne';src:url('/fonts/cac_champagne-webfont.eot');src:url('/fonts/cac_champagne-webfont.eot?#iefix') format('embedded-opentype'),url('/fonts/cac_champagne-webfont.woff') format('woff'),url('/fonts/cac_champagne-webfont.ttf') format('truetype'),url('/fonts/cac_champagne-webfont.svg#CACChampagneRegular') format('svg');
  font-weight:normal;
  font-style:normal;
  -webkit-font-smoothing: antialiased;

@media (min-width: 1000px)

  $duration = 500ms

  *
    margin 0
    padding 0

  h1, h2, h3
    font-family Oswald, sans-serif
    margin-bottom 10px
    color #ddd
    text-shadow: 1px 1px 0 #444

  h1
    font-size 3.2vw
  h2
    font-size 1.6vw
  h3
    font-size 1.5vw

  body
    background-color #222
    color white
    font-family Lato, sans-serif
    overflow hidden

  header
    font-family Oswald, sans-serif
    position fixed
    $margin = 20px
    left $margin
    bottom $margin
    *
      margin 0
      opacity 0
    h1
      animation fadein $duration ease-in 1ms forwards
      -webkit-animation fadein $duration ease-in 1ms forwards
      -moz-animation fadein $duration ease-in 1ms forwards

      a
        opacity 1
        color #ddd
        text-decoration none
        font 5vw Champagne, serif
        line-height 4.5vw
        letter-spacing 1px

    for $child in 1 2
      h2:nth-of-type({$child})
        animation fadein $duration ease-in ($duration * $child) forwards
        -webkit-animation fadein $duration ease-in ($duration * $child) forwards
        -moz-animation fadein $duration ease-in ($duration * $child) forwards

  section
    position absolute
    left 40%
    width 55%
    height 95%
    padding 0 20px
    margin 20px 0
    overflow-y auto
    opacity 0
    animation fadein $duration ease-in 1600ms forwards
    -webkit-animation fadein $duration ease-in 1600ms forwards
    -moz-animation fadein $duration ease-in 1600ms forwards

  nav
    position absolute
    $margin = 20px
    top 20px
    left 20px
    opacity 0
    animation fadein $duration ease-in 2400ms forwards
    -webkit-animation fadein $duration ease-in 2400ms forwards
    -moz-animation fadein $duration ease-in 2400ms forwards
    li
      list-style none

  a
    color #ddd
  a:hover
    color #fff

  p
    margin-bottom 20px

  .highlight
    margin-bottom 20px

  @keyframes fadein {
    from { opacity: 0 }
    to   { opacity: 1 }
  }

  ::-webkit-scrollbar
    width 12px

  ::-webkit-scrollbar-thumb
    border-radius 5px
    -webkit-box-shadow inset 0 0 6px rgba(0, 0, 0, .3)
    background-color rgba(100, 100, 100, 0.7)